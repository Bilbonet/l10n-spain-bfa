<?xml version="1.0"?>
<odoo>

  <record id="l10n_es_bfa_mod140_summary_form_view" model="ir.ui.view">
    <field name="name">l10n_es_bfa_mod140.summary.form</field>
    <field name="model">l10n.es.bfa.mod140.summary</field>
    <field name="arch" type="xml">
      <form string="Summary">
        <sheet>
          <group name="main">
            <field name="base_amount"/>
            <field name="tax_amount" />
            <field name="total_amount" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="l10n_es_bfa_mod140_summary_tree_view" model="ir.ui.view">
    <field name="name">l10n_es_bfa_mod140.summary.tree</field>
    <field name="model">l10n.es.bfa.mod140.summary</field>
    <field name="arch" type="xml">
      <tree string="Summary">
        <field name="base_amount"/>
        <field name="tax_amount" />
        <field name="total_amount" />
      </tree>
    </field>
  </record>

</odoo>